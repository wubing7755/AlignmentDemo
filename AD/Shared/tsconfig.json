{
  "compileOnSave": true,
  "compilerOptions": {
    /* 基础选项 */
    "target": "ES2020",
    "module": "ESNext",
    // 使用 Node.js 的模块解析策略
    "moduleResolution": "node",

    /* 输出结构 */
    // 编译后的 JS 文件输出目录
    "outDir": "../Client/wwwroot/js",
    // TS 源文件根目录
    "rootDir": "../Shared/ts",
    // 移除注释
    "removeComments": true,
    // 生成 source map 文件
    "sourceMap": true,

    /* 严格的类型检查选项 */
    // 启用所有严格类型检查
    "strict": true,
    // 不允许隐式的 any 类型
    "noImplicitAny": true,
    // 不允许把 null 和 undefined 赋值给非 nullable 类型
    "strictNullChecks": true,
    // 严格检查函数类型
    "strictFunctionTypes": true,
    // 函数必须有返回值
    "noImplicitReturns": true,
    // switch 语句必须有 break
    "noFallthroughCasesInSwitch": true,

    /* 模块解析选项 */
    // 允许使用 import/export 语法导入 CommonJS 模块
    "esModuleInterop": true,
    // 允许合成默认导入
    "allowSyntheticDefaultImports": true,
    // 强制文件名大小写一致
    "forceConsistentCasingInFileNames": true,
    // 跳过对库文件的类型检查，加快编译速度
    "skipLibCheck": true,

    /* 实验性选项 */
    // 允许导入 .json 文件
    "resolveJsonModule": true,

    /* 类型库 */
    // 包含 DOM 和 ES2020 的类型定义
    "lib": [ "DOM", "ES2020" ]
  },
  "include": [
    // 指定要编译的 TS 文件路径
    "ts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
